<div id="module-whole" class="ez-wr">
    <div id="module-header" class="ez-box">
<header id="header">
    <img src="{{=URL('static', 'images/logo.png')}}" />
    <div id="sitetitle">
        <h1>{{=response.title}}</h1>
        <h2>{{=response.subtitle}}</h2>
    </div><!-- #sitetitle -->
    <div id="userinfo">
        {{try:}}
        {{=auth.navbar(action=URL(request.application, 'default', 'user'))}}
        {{except: pass}}
    </div><!-- #userinfo -->
</header><!-- #header -->
    </div><!-- #module-header -->

    <div id="module-content" class="ez-wr">
<div id="main">
        <div id="module-3-1" class="ez-fl ez-negmx ez-25">
            <div id="module-left" class="ez-box">
{{if left_sidebar_enabled:}}
    <nav id="left_sidebar">
    {{block left_sidebar}}
<ul id="menu">
    <li>
        <a href="{{=URL('edit')}}">{{=T('文章列表')}}</a>
    </li>
    <li>
        <a href="{{=URL('new')}}">{{=T('添加新文章')}}</a>
    </li>
    <li>
        <a href="{{=URL('edit-tags', vars=dict(taxonomy='category'))}}">{{=T('分类目录')}}</a>
    </li>
    <li>
        <a href="{{=URL('edit-tags', vars=dict(taxonomy='post_tag'))}}">{{=T('文章标签')}}</a>
    </li>
</ul>
    {{end}}
    </nav><!-- #left_sidebar -->
{{pass}}
            </div><!-- #module-left -->
        </div><!-- #module-3-1 -->

        <div id="module-3-2" class="ez-fr ez-negmr ez-50">
            <div id="module-center" class="ez-box">
    <div id="content">
{{include}}
    </div><!-- #content -->
            </div><!-- #module-center -->
        </div><!-- #module-3-2 -->

        <div id="module-3-3" class="ez-last ez-oh">
            <div id="module-right" class="ez-box">
{{if right_sidebar_enabled:}}
    <div id="right_sidebar">
    {{block right_sidebar}}
        Content Right Sidebar
    {{end}}
    </div><!-- #right_sidebar -->
{{pass}}
            </div><!-- #module-right -->
        </div><!-- #module-3-3 -->
</div><!-- #main -->
    </div><!-- #module-content -->

    <div id="module-footer" class="ez-box">
<footer id="footer" class="ez-box">
    {{=T('版权所有')}} &#169; 2011 - 
    {{=T('Powered by')}} <a href="http://www.web2py.com/" target="_blank">web2py</a>
</footer><!-- #footer -->
    </div><!-- #module-footer -->
</div><!-- #module-whole -->
</body>
</html>
